<div style="padding: 10px;">
  <%= link_to "Back to Subjects", subjects_path, class: "btn btn-success" %>    
</div>

<div class="col-6" style="margin : 0 auto;">
  <h2><%= @subject.name %>'s  Details</h2></br></br>
  <h4>Name: <%= @subject.name %></h4>
  <h4>Code: <%= @subject.code %></h4>
  <h4>Teacher Id: <%= @subject.teacher_id %></h4>
  </br></br>
  <div class="d-flex justify-content-center">  
    <div class="col-2">
      <%= link_to "Edit", edit_subject_path(@subject), class: "btn btn-warning"%> 
    </div>
    <div class="col-3">
      <%= button_to "Destroy", @subject, class: "btn btn-danger", data: {:confirm => 'Are you sure?'}, method: :delete %>
    </div>
  </div>
</div>