<div style="padding: 10px;">
  <%= link_to "Back to Attendances", attendances_path, class: "btn btn-success" %>    
</div>

<div class="col-6" style="margin : 0 auto;">
  <h2><%= @attendance.time %>'s  Details</h2></br></br>
  <h4>Status: <%= @attendance.status %></h4>
  <h4>Subject Id: <%= @attendance.subject_id %></h4>
  <h4>Student Id: <%= @attendance.student_id %></h4>
  <h4>Date: <%= @attendance.date %></h4>
  <h4>Time: <%= @attendance.time %></h4>
  </br></br>
  <div class="d-flex justify-content-center">  
    <div class="col-2">
      <%= link_to "Edit", edit_attendance_path(@attendance), class: "btn btn-warning"%> 
    </div>
    <div class="col-3">
      <%= button_to "Destroy", @attendance, class: "btn btn-danger", data: {:confirm => 'Are you sure?'}, method: :delete %>
    </div>
  </div>
</div>