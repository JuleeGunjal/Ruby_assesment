<div style="padding: 10px;">
  <%= link_to "Back to Students", students_path, class: "btn btn-success" %>    
</div>

<div class="col-6" style="margin : 0 auto;">
  <h2><%= @student.name %>'s  Details</h2></br></br>
  <h4>Name: <%= @student.name %></h4>
  <h4>Email: <%= @student.email %></h4>
  <h4>Date of birth: <%= @student.dob %></h4>
  <h4>Gender: <%= @student.gender %></h4>
  <h4>Address: <%= @student.address %></h4>
  <h4>Semister: <%= @student.semister %></h4>
  <h4>Course: <%= @student.course %></h4></br></br>
  <div class="d-flex justify-content-center">  
    <div class="col-2">
      <%= link_to "Edit", edit_student_path(@student), class: "btn btn-warning"%> 
    </div>
    <div class="col-3">
      <%= button_to "Destroy", @student, class: "btn btn-danger", data: {:confirm => 'Are you sure?'}, method: :delete %>
    </div>
  </div>
</div>