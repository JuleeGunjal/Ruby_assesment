<div style="padding: 10px;">
  <%= link_to "Back to Teachers", teachers_path, class: "btn btn-success" %>   
</div>

<div class="col-6" style="margin : 0 auto;">
  <h2><%= @teacher.name %>'s  Details</h2></br></br>
  <h4>Name: <%= @teacher.name %></h4>
  <h4>Email: <%= @teacher.email %></h4>
  <h4>Date of birth: <%= @teacher.dob %></h4>
  <h4>Gender: <%= @teacher.gender %></h4>
  <h4>Address: <%= @teacher.address %></h4>
  <h4>Mobile number: <%= @teacher.mobile_no %></h4></br></br>
  <div class="d-flex justify-content-center">  
    <div class="col-2">
      <%= link_to "Edit", edit_teacher_path(@teacher), class: "btn btn-warning"%> 
    </div>
    <div class="col-3">
      <%= button_to "Destroy", @teacher, class: "btn btn-danger", data: {:confirm => 'Are you sure?'}, method: :delete %>
    </div>
  </div>
</div>