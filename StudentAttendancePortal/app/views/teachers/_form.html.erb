<%= form_with(model: teacher) do |form| %>
  <table>
    <tr>
      <div>
        <td><%= form.label :name, "Name: " %></td>
        <td><%= form.text_field :name %></td>
      </div>
    </tr>
    <tr>
      <div>
        <td> <%= form.label :password, 'Password: '%></td>
        <td><%= form.password_field :password %></td>
      </div>
    </tr>
    <tr>
      <div>
        <td><%= form.label :password, 'Confirm -Password: '%></td>
        <td><%= form.password_field :password_confirmation %></td>
      </div>
    </tr>
    <tr>
      <div>
        <td><%= form.label :email,"Email: " %></td>
        <td><%= form.text_field :email %></td>
      </div>
    </tr>
    <tr>
      <div>
        <td><%= form.radio_button :gender, "Female" %>
          <%= form.label :Female, "Female" %></td>
        <td><%= form.radio_button :gender, "Male" %>
          <%= form.label :Male, "Male" %></td>
      </div>
    </tr>
    <tr>
      <div>
        <td><%= form.label :dob, "Date of birth: " %></td>
        <td><%= form.date_field :dob, as: :date, value: form.object.try(:strftime,"%m/%d/%Y")%></td>
      </div>
    </tr>
    <tr>
      <div>
        <td><%= form.label :mobile_no, 'Mobile number: ' %></td>
        <td> <%= form.text_field :mobile_no %></td>
      </div>
    </tr>
    <tr>
      <div>
        <td><%= form.label :address,'Address: ' %></td>
        <td><%= form.text_field :address %></td>
      </div>
    </tr>
  </table>

  <div>
    <%= form.submit %>
  </div>
<% end %>
