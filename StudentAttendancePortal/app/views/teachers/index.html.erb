<div class="col-4" style="margin : 0 auto; padding: 10px">
<h1>All Teachers data</h1></br>
</div>
<table class="table table-striped">
<thead class="thead-light">
<tr>
<td>ID</td>
<td>Name</td>
<td>Email</td>
<td>Mobile number</td>
</tr>
</thead>
<tbody>
<% @teachers.each do |teacher| %>
<tr>
  <td><%=teacher.id%></td>
  <td><%= teacher.name %></td>
  <td><%= teacher.email %></td> 
  <td><%= teacher.mobile_no %></td>
  <td><%= link_to 'show', teacher%></td>
</tr>
<% end %>
</tbody>
</table>
<div class="col-2" style="margin : 0 auto; padding: 10px">
<%= link_to 'Add new', new_teacher_path, class: "btn btn-success" %>
</div>